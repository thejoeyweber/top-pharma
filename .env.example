# Database (Supabase)
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@[PROJECT-REF].supabase.co:5432/postgres"

# Authentication (Clerk)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/"

# Analytics (PostHog)
NEXT_PUBLIC_POSTHOG_KEY="phc_..."
POSTHOG_HOST="https://[your-instance].posthog.com"
POSTHOG_PERSONAL_API_KEY="phx_..."

# OpenAI (for AI processing)
OPENAI_API_KEY="sk-..."
OPENAI_ORG_ID="org-..." # Optional

# Stripe (for premium features)
STRIPE_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
STRIPE_PRICE_PRO="price_..." # Premium tier price ID
STRIPE_PRICE_TEAMS="price_..." # Team tier price ID

# Email (for notifications)
EMAIL_FROM="noreply@yourdomain.com"
RESEND_API_KEY="re_..." # If using Resend
# Or for SendGrid:
# SENDGRID_API_KEY="SG..."

# Internal API Security
INTERNAL_API_SECRET_KEY="internal_..." # For securing internal endpoints (n8n, etc.)

# External APIs Rate Limits
OPENFDA_API_KEY="..." # Optional, increases rate limits
SEC_EDGAR_EMAIL="your-email@domain.com" # Required for SEC EDGAR access

# Storage (Supabase)
NEXT_PUBLIC_SUPABASE_URL="https://[PROJECT-REF].supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="eyJ..."
SUPABASE_SERVICE_ROLE_KEY="eyJ..." # For admin operations

# Feature Flags
ENABLE_PREMIUM_FEATURES="true"
ENABLE_API_ACCESS="true"
AI_CONFIDENCE_THRESHOLD="0.85" # Threshold for auto-approval

# Deployment
NODE_ENV="development" # development | production
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_ADMIN_URL="http://localhost:3001"

# Rate Limiting
API_RATE_LIMIT="120" # Requests per minute
API_TOKEN_PREFIX="tpk_" # Prefix for API tokens

# Optional: Multi-tenancy
# MULTI_TENANT_ENABLED="false"
# DEFAULT_ORG_ID="org_default"
